{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "outDir": "lib",
    "strict": false,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
