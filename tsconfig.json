{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "lib",
    "strict": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "lib": [ "es2022", "DOM" ]
  },
  "include": [
    "src/*.ts", 
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules", 
    "src/tests",
    "src/scripts"
  ]
}
